# Amber Electric
AMBER_API_KEY=psk_your_key_here
AMBER_SITE_ID=your_site_id_here

# Solcast
SOLCAST_API_KEY=your_solcast_key_here
SOLCAST_RESOURCE_ID=your_resource_id_here

# FoxESS Inverter (Modbus TCP)
FOXESS_IP=192.168.1.100
FOXESS_PORT=502
FOXESS_SLAVE_ID=247

# Battery Specs
BATTERY_CAPACITY_KWH=42.0
BATTERY_MAX_POWER_KW=10.0
BATTERY_MIN_SOC_PCT=10
BATTERY_EFFICIENCY=0.90
BATTERY_COST_AUD=15000
BATTERY_CYCLE_LIFE=6000

# System
SCHEDULER_INTERVAL_SECONDS=300
LOG_LEVEL=INFO
DB_PATH=power_arb.db
TIMEZONE=Australia/Brisbane

# Set to true to run without writing to the inverter.
# The optimizer still runs and logs decisions, but no Modbus writes are sent.
DRY_RUN=false

# Weather (Open-Meteo, free API)
LATITUDE=-27.47
LONGITUDE=153.03
WEATHER_REFRESH_HOURS=3

# Home Assistant (occupancy and AC detection)
HA_ENABLED=false
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token_here
HA_PERSON_ENTITIES=person.user1,person.user2
HA_CLIMATE_ENTITIES=climate.living_room_ac,climate.bedroom_ac

# ML Forecasting
ML_FORECASTING_ENABLED=true
ML_MIN_PRICE_DAYS=14
ML_MIN_CONSUMPTION_DAYS=7
ML_PRICE_WINDOW_DAYS=60
ML_CONSUMPTION_WINDOW_DAYS=28
ML_MODEL_DIR=models
